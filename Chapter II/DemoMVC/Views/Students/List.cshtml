@{

}

@model List<DemoMVC.Models.Entities.Student>

<h1>Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                @if (student.Subscribed == true)
                {
                    <td>
                        Subscribed
                    </td>
                }
                else
                {
                    <td>
                        Not Subscribed
                    </td>
                }
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit"
                        asp-route-id="@student.Id">Edit</a> <span> | </span>
                    <form asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id" method="post"
                        style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this student?');">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>